{
  "$schema": "http://json.schemastore.org/template",
  "author": "KeyCloak Blazor Server Template",
  "classifications": ["Web", "Blazor", "Server", "KeyCloak", "OIDC", "Authentication"],
  "identity": "KeyCloak.BlazorServer.Template",
  "name": "KeyCloak Blazor Server",
  "shortName": "keycloak-blazor-server",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "description": "A Blazor Server template with KeyCloak OIDC authentication, comprehensive API integration, and authentication testing capabilities.",
  "sourceName": "BlazorServer",
  "preferNameDirectory": true,
  "placeholderFilename": "template_placeholder",
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net9.0",
          "description": ".NET 9.0"
        },
        {
          "choice": "net8.0", 
          "description": ".NET 8.0"
        }
      ],
      "defaultValue": "net9.0",
      "replaces": "net9.0"
    },
    "KeycloakRealm": {
      "type": "parameter",
      "description": "The Keycloak realm name",
      "datatype": "string",
      "defaultValue": "blazor-app",
      "replaces": "blazor-app"
    },
    "KeycloakUrl": {
      "type": "parameter", 
      "description": "The Keycloak server URL",
      "datatype": "string",
      "defaultValue": "http://localhost:8080",
      "replaces": "http://localhost:8080"
    },
    "ClientId": {
      "type": "parameter",
      "description": "The Keycloak client ID",
      "datatype": "string",
      "defaultValue": "blazor-server",
      "replaces": "blazor-server"
    },
    "ClientSecret": {
      "type": "parameter",
      "description": "The Keycloak client secret (can be updated later)",
      "datatype": "string",
      "defaultValue": "your-blazor-client-secret-here",
      "replaces": "your-blazor-client-secret-here"
    },
    "ApiBaseUrl": {
      "type": "parameter",
      "description": "The base URL for the API server",
      "datatype": "string",
      "defaultValue": "https://localhost:7002",
      "replaces": "https://localhost:7002"
    },
    "RequireHttpsMetadata": {
      "type": "parameter",
      "description": "Require HTTPS metadata for Keycloak (set to false for local development)",
      "datatype": "bool",
      "defaultValue": "false"
    },
    "IncludeApiIntegration": {
      "type": "parameter",
      "description": "Include API integration services and testing pages",
      "datatype": "bool",
      "defaultValue": "true"
    },
    "EnableDiagnostics": {
      "type": "parameter",
      "description": "Enable comprehensive authentication diagnostics",
      "datatype": "bool",
      "defaultValue": "true"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!IncludeApiIntegration)",
          "exclude": [
            "Services/ApiService.cs",
            "Services/IApiService.cs",
            "Services/ApiDiagnosticsService.cs",
            "Services/IApiDiagnosticsService.cs",
            "Pages/ApiTest.razor"
          ]
        },
        {
          "condition": "(!EnableDiagnostics)",
          "exclude": [
            "Services/ApiDiagnosticsService.cs",
            "Services/IApiDiagnosticsService.cs"
          ]
        }
      ]
    }
  ],
  "primaryOutputs": [
    {
      "path": "BlazorServer.csproj"
    }
  ],
  "postActions": [
    {
      "condition": "(OS != \"Windows_NT\")",
      "description": "Make scripts executable",
      "manualInstructions": [
        {
          "text": "Run 'chmod +x *.sh'"
        }
      ],
      "actionId": "cb9a6cf3-4f5c-4860-b9d2-03a574959774",
      "args": {
        "+x": "*.sh"
      },
      "continueOnError": true
    }
  ]
}